// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id          String @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  
  users   User[]
  cameras Camera[]
  events  Event[]
  reviews Review[]
  availabilityLogs AvailabilityLog[]
  frigateServers FrigateServer[]

  @@map("tenants")
}

model User {
  id        String @id @default(cuid())
  email     String @unique
  password  String
  role      UserRole @default(CLIENT)
  tenantId  String
  tenant    Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("users")
}

enum UserRole {
  ADMIN
  CLIENT
}

model Camera {
  id                 String @id @default(cuid())
  tenantId           String
  tenant             Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  frigateCameraKey   String // Frigate camera name/identifier
  label              String?
  inputUrl           String?
  isTestFeed         Boolean @default(false)
  inputArgs          String?
  roles              String?
  recordEnabled      Boolean @default(true)
  snapshotsEnabled   Boolean @default(true)
  snapshotsRetainDays Int @default(10)
  motionEnabled      Boolean @default(true)
  detectWidth        Int @default(320)
  detectHeight       Int @default(180)
  detectFps          Int @default(5)
  zoneName           String @default("face")
  zoneCoordinates    String?
  zoneObjects        String? @default("person,car,cat,dog")
  reviewRequiredZones String?
  ip                 String?
  port               Int?
  username           String?
  password           String?
  isEnabled          Boolean @default(true)
  createdAt          DateTime @default(now())
  
  events Event[]
  reviews Review[]

  @@unique([tenantId, frigateCameraKey])
  @@map("cameras")
}

model Event {
  id         String @id @default(cuid())
  tenantId   String
  tenant     Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  cameraId   String
  camera     Camera @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  frigateId  String // event_id from MQTT
  type       String
  label      String?
  status     String @default("unresolved")
  acknowledgedAt DateTime?
  resolvedAt DateTime?
  hasSnapshot Boolean @default(false)
  hasClip     Boolean @default(false)
  startTime   Float?
  endTime     Float?
  rawPayload  Json
  createdAt   DateTime @default(now())

  @@unique([tenantId, frigateId])
  @@index([tenantId])
  @@index([cameraId])
  @@index([createdAt])
  @@map("events")
}

model Review {
  id         String @id @default(cuid())
  tenantId   String
  tenant     Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  cameraId   String
  camera     Camera @relation(fields: [cameraId], references: [id], onDelete: Cascade)
  reviewId   String
  cameraName String
  severity   String
  retracted  Boolean @default(false)
  timestamp  DateTime?
  rawPayload Json
  createdAt  DateTime @default(now())

  @@unique([tenantId, reviewId])
  @@index([tenantId])
  @@index([cameraId])
  @@index([createdAt])
  @@map("reviews")
}

model AvailabilityLog {
  id         String @id @default(cuid())
  tenantId   String
  tenant     Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  available  Boolean
  timestamp  DateTime
  rawPayload Json
  createdAt  DateTime @default(now())

  @@index([tenantId])
  @@index([createdAt])
  @@map("availability_logs")
}

model FrigateServer {
  id         String  @id @default(cuid())
  tenantId   String
  tenant     Tenant  @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name       String
  baseUrl    String
  authType   String  @default("none") // none | token | login
  username   String?
  password   String?
  token      String?
  configPath String?
  verifyTls  Boolean @default(true)
  isEnabled  Boolean @default(true)
  isDefault  Boolean @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([tenantId, name])
  @@index([tenantId])
  @@map("frigate_servers")
}
