# Backend Environment Variables
# Copy this file to .env and fill in actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Prisma connection string format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/sateliteyes_saas

# Database Legacy Configuration (for reference)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sateliteyes_saas
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
# TODO: Generate and set JWT secrets
JWT_SECRET=your-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRY=7d

# CORS Configuration
# Support comma-separated list of origins for development
# Example: http://localhost:5173,http://localhost:8080
CORS_ORIGIN=http://localhost:5173,http://localhost:8080

# Logging
LOG_LEVEL=info

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Multi-tenant Configuration
# TODO: Configure tenant isolation and routing
ENABLE_MULTI_TENANT=true
